<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/x15"
    android:background="@drawable/dialog_common">

    <TextView
        android:id="@+id/tv_commonDialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/x2"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="@dimen/px_40" />

        <TextView
            android:id="@+id/tv_commonDialog_content"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commonDialog_title"
            android:padding="@dimen/x5"
            android:text="内容"
            android:textSize="@dimen/px_30" />

        <LinearLayout
            android:layout_marginTop="@dimen/y15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_commonDialog_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_commonDialog_sure"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y25"
                android:background="@drawable/bt_bg_blue"
                android:textColor="@color/white"
                android:text="确定"
                android:textSize="@dimen/px_25" />

            <View
                android:id="@+id/v_commonDialog_space"
                android:layout_width="@dimen/x40"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/bt_commonDialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y25"
                android:background="@drawable/bt_bg_blue"
                android:textColor="@color/white"
                android:text="取消"
                android:textSize="@dimen/px_25" />
        </LinearLayout>
</RelativeLayout>